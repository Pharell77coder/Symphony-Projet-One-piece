{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block content %}
    <h1>Gestion des utilisateurs</h1>

    <a href="{{ path('app_admin_utilisateur_new') }}" class="btn-enregistrer">Créer un nouvel utilisateur</a>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Rôles</th>
                    <th>Actif</th>
                    <th>Créé le</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for utilisateur in utilisateurs %}
                <tr>
                    <td>{{ utilisateur.id }}</td>
                    <td>{{ utilisateur.email }}</td>
                    <td>{{ utilisateur.prenom }}</td>
                    <td>{{ utilisateur.nom }}</td>
                    <td>
                        {% for role in utilisateur.roles %}
                            <span class="badge">{{ role }}</span>
                        {% endfor %}
                    </td>
                    <td>
                        {% if utilisateur.isActive %}
                            <span class="badge-success">Oui</span>
                        {% else %}
                            <span class="badge-error">Non</span>
                        {% endif %}
                    </td>
                    <td>{{ utilisateur.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        <a href="{{ path('app_admin_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn-edit">Modifier</a>
                        
                        <form method="post" action="{{ path('app_admin_utilisateur_toggle_active', {'id': utilisateur.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle-active' ~ utilisateur.id) }}">
                            <button type="submit" class="btn-toggle">
                                {{ utilisateur.isActive ? 'Désactiver' : 'Activer' }}
                            </button>
                        </form>
                        
                        <form method="post" action="{{ path('app_admin_utilisateur_delete', {'id': utilisateur.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                            <button type="submit" class="btn-delete">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun utilisateur trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}