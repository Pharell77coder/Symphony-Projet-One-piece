<div class="form-produit">
    {{ form_start(form) }}
    
    <div class="form-group">
        {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-input medium'}}) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-textarea'}}) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.prix, 'Prix (â‚¬)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.prix, {'attr': {'class': 'form-input small'}}) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.image, 'URL Image', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.image, {'attr': {'class': 'form-input large'}}) }}
    </div>
    
    <button type="submit" class="btn-enregistrer">
        {{ button_label|default('ENREGISTRER') }}
    </button>
    
    {{ form_end(form) }}
</div>